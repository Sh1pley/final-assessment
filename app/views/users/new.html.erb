<div class='new-user'>
  <h2>Let's Get You Started!</h2>
  <div class='user-form'>
    <%= form_tag new_user_path, method: :post do %>
      <div class='form-group'>
        <%= label_tag :email %>
        <br>
        <%= email_field_tag :email, "", class: "form-control" %>
      </div>
       <div class='form-group'>
        <%= label_tag :password %>
        <br>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= label_tag :password_confirmation %>
        <br>
        <%= password_field_tag :password_confirmation, "", class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= submit_tag "Sign Up", class: "form-control btn btn-default btn-success" %>
      </div>
    <% end %>
  </div>
</div>