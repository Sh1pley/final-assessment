<div class="edit-link-form">
  <em>Edit this link</em>
  <%= form_tag(link_path(@link), method: :put) do %>
    <br>
    URL: <%= @link.url %> </br>
    Title: <%= @link.title %> <br>
    <%= label_tag :link_url %>
    <%= text_field_tag :url %>
    <br>
    <%= label_tag :link_title %>
    <%= text_field_tag :title %>
    <br>
    <%= submit_tag "Update Link" %>
  <% end %>
</div>